checks:
    php: true
    javascript: true
filter:
    excluded_paths:
        - '_tests/*'
build:
    dependencies:
        before:
            - sh .scrutinizer.sh
    nodes:
        analysis:
            tests:
                override:
                    -
                        command: phpcs-run
                        use_website_config: true
                    - php-scrutinizer-run